<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qrgenerator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/topbarr"
        android:text="QR Generator/Scanner - Aldrich"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_marginTop="110dp"
        android:tint="@color/dark"
        android:textSize="30dp"
        android:textColor="@color/light"
        android:text="QR GENERATOR"
        android:src="@drawable/qrname"
        android:id="@+id/topbar"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:background="#99b898"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter Text Here"
        android:gravity="center"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Generate QR Code"
        android:layout_marginTop="15dp"
        android:id="@+id/button"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/dark"
        android:layout_below="@id/button">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:outlineAmbientShadowColor="@color/dark"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button"
        />

    </LinearLayout>

</RelativeLayout>